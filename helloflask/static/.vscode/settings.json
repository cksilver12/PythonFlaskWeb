{
    "window.zoomLevel": 0, //창의 확대/축소 수준 조정 기본 0
    "editor.wordWrap": "on", // 'on' 코드 자동줄바꿈/'off' 줄바꿈안함
    "editor.fontFamily": "Consolas", //글꼴 패밀리
    "editor.lineNumbers": "on",  //줄 번호 표시 여부  
    "window.closeWhenEmpty": true, //마지막 편집기 닫을때 창도 닫을지 여부 제어
    "editor.mouseWheelZoom": true, // Ctrl키 누르고 있을때 마우스 휠로 줌/아웃
    "editor.minimap.enabled": false, //미니맵 표시여부 제어
    "files.autoSave": "afterDelay", // 자동저장 제어 1000ms 후 파일 저장
    "editor.cursorStyle": "line", //커서 스타일
    "editor.tabSize": 4, //탭 한개에 해당하는 공백 수 
    // "powermode.enabled": true, //파워모드 활성화
    // "powermode.enableShake":true, // 진동모드 활성화
    // "powermode.maxExplosions": 20, //폭발 최대 개수
    // "powermode.explosionSize": 10, //폭발 사이즈
    // "powermode.presets": "particles", //폭발 종류 
    "workbench.colorTheme": "Visual Studio Dark", //테마
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe", // window에서 터미널에 사용하는 셸의 경로
    // "workbench.iconTheme": "vscode-icons",
    "files.encoding": "euckr", //icon 테마를 vscode_icons 확장 프로그램 사용

}